{
  "name": "gominiapp-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Scalable backend for GoMiniApp and future mini-apps",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @gominiapp/gateway dev\" \"yarn workspace @gominiapp/go-service dev\"",
    "build": "yarn workspaces foreach -A run build",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop gominiapp-gateway",
    "restart": "pm2 restart gominiapp-gateway",
    "reload": "pm2 reload gominiapp-gateway",
    "delete": "pm2 delete gominiapp-gateway",
    "logs": "pm2 logs gominiapp-gateway",
    "monit": "pm2 monit",
    "status": "pm2 status",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "yarn workspaces foreach -A run test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "pm2": "^5.3.0",
    "prisma": "^5.7.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
