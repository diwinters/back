# GoMiniApp Backend Environment
# Copy this file to .env and fill in the values

# Database
DATABASE_URL="postgresql://gominiapp:gominiapp_dev@localhost:5432/gominiapp?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
NODE_ENV=development

# JWT Secret for internal service auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Bluesky Configuration
BSKY_SERVICE_URL=https://bsky.social
BSKY_DID_PLC_URL=https://plc.directory

# Expo Push Notifications
EXPO_ACCESS_TOKEN=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_PUSH_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Geo Settings
DEFAULT_SEARCH_RADIUS_KM=10
DRIVER_LOCATION_UPDATE_THRESHOLD_M=80
